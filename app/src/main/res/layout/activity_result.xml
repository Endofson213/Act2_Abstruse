<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_screen_bg"
    tools:context=".Result">

    <TextView
        android:id="@+id/storytxt"
        android:layout_width="320dp"
        android:layout_height="179dp"
        android:text="nice!"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.427" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tryAgain"
        android:layout_width="106dp"
        android:layout_height="22dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/custom_input_start"
        android:text="Restart Game?"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/storytxt"
        app:layout_constraintStart_toStartOf="@+id/storytxt"
        app:layout_constraintTop_toBottomOf="@+id/storytxt" />


</androidx.constraintlayout.widget.ConstraintLayout>